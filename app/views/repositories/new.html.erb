<header>MINIMALISTIC FORM</header>

<%=form_for [@user,@repository],html: {id: "form", class: "topLeft"}  do |f|%>
    <%=f.text_field :name, id: "name", placeholder: "NAME"%>
    <%=f.text_field :language, placeholder: "LANGUAGE"%>
    <%=f.text_area :description , placeholder: "DESCRIPTION"%>
    <%=f.submit "CREATE" , id: "submit"%>
<%end %>
